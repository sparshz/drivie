<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:background="@color/light_main"
    app:cardCornerRadius="7pt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/driverProfileIV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/profile_test_image" />

        <TextView
            android:id="@+id/driverName_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/driverProfileIV"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/driverAddress_item"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Dirver Address"
            android:maxLines="2"
            android:layout_below="@+id/driverName_item"
            android:layout_toEndOf="@+id/driverProfileIV"/>


        <TextView
            android:id="@+id/driverAge_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/driverAddress_item"
            android:layout_toEndOf="@+id/driverProfileIV"
            android:text="Age:40y"/>

        <TextView
            android:id="@+id/driverExp_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/driverAddress_item"
            android:layout_toEndOf="@+id/driverAge_item"
            android:layout_marginStart="10dp"
            android:text="Exp:40y"/>


        <LinearLayout
            android:id="@+id/vehicleType_item"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/driverAge_item"
            android:layout_toEndOf="@+id/driverProfileIV"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_lmv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/light_main"
                app:cardCornerRadius="12pt"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:text="LMV"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_muv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/light_main"
                app:cardCornerRadius="12pt"
                android:background="@drawable/vehicle_type_light"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/muv_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="MUV"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_suv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/light_main"
                app:cardCornerRadius="12pt"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="SUV"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vehicleType_item2"
            android:layout_width="200dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vehicleType_item"
            android:layout_toEndOf="@+id/driverProfileIV"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/item_sedan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/light_main"
                app:cardCornerRadius="12pt"
                android:background="@drawable/vehicle_type_light"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Sedan"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_hatchback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/light_main"
                app:cardCornerRadius="12pt"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Hatchback"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </androidx.cardview.widget.CardView>



        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hireDriver_itemBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape"
            android:text="Hire"
            android:textAllCaps="false" />





    </RelativeLayout>


</androidx.cardview.widget.CardView>